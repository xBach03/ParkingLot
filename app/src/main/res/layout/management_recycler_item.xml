<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/recyclerBg"
        android:layout_width="280dp"
        android:layout_height="120dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/manage_recycler_item_bg"
        android:layout_marginTop="15dp"
        />

    <TextView
        android:id="@+id/historyId"
        android:layout_width="90dp"
        android:layout_height="20dp"
        android:background="@drawable/history_id_bg"
        android:text="History ID"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@id/recyclerBg"
        app:layout_constraintHorizontal_bias="0.0"

        app:layout_constraintStart_toStartOf="@id/recyclerBg"
        app:layout_constraintTop_toTopOf="@id/recyclerBg" />
    <TextView
        android:id="@+id/vehicleId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/historyId"
        app:layout_constraintStart_toStartOf="@id/historyId"
        app:layout_constraintEnd_toEndOf="@id/historyId"
        android:layout_marginStart="20dp"
        android:layout_marginTop="3dp"
        android:text="29F1-59132"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/historyStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/vehicleId"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="80dp"
        android:layout_marginTop="5dp"
        android:textSize="12dp"
        android:text="Start: 1st April 2024 23:20"
        />
    <TextView
        android:id="@+id/historyEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/historyStart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="80dp"
        android:textSize="12dp"
        android:text="End: 2nd April 2024 08:30"
        />

    <TextView
        android:id="@+id/totalTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/recyclerBg"
        app:layout_constraintEnd_toEndOf="@id/recyclerBg"
        app:layout_constraintStart_toStartOf="@id/recyclerBg"
        android:layout_marginEnd="160dp"
        android:layout_marginBottom="10dp"
        android:textSize="12dp"
        android:text="Total: 8 hours"
        />
    <TextView
        android:id="@+id/moneyPaid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/historyStart"
        app:layout_constraintEnd_toEndOf="@id/recyclerBg"
        app:layout_constraintTop_toTopOf="@id/recyclerBg"
        app:layout_constraintBottom_toBottomOf="@id/recyclerBg"
        android:layout_marginStart="25dp"
        android:text="13.00$"
        />
</androidx.constraintlayout.widget.ConstraintLayout>